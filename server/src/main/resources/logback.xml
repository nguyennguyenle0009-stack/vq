<configuration>
  <!-- Cho biết lỗi cấu hình nếu có -->
  <statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener"/>

  <!-- Nếu code chưa set, vẫn có mặc định về Desktop -->
  <timestamp key="LOG_STAMP" datePattern="yyyy-MM-dd_HH-mm-ss"/>
  <property name="VQ_LOG_DIR" value="${user.home}/Desktop/Vương quyền/server"/>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <appender name="FILE" class="ch.qos.logback.core.FileAppender">
    <file>${VQ_LOG_DIR}/server log ${LOG_STAMP}.txt</file>
    <append>true</append>
    <encoder>
      <charset>UTF-8</charset>
      <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
    </encoder>
  </appender>

  <!-- Giảm ồn -->
  <logger name="io.netty" level="WARN"/>
  <logger name="io.netty.channel.DefaultChannelPipeline" level="ERROR"/>
  <logger name="rt.server.websocket.WsExceptionHandler" level="DEBUG"/>

  <root level="INFO">
    <appender-ref ref="STDOUT"/>
    <appender-ref ref="FILE"/>
  </root>
</configuration>